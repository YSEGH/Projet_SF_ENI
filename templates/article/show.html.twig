{% extends 'base.html.twig' %}
{% block css %}
<link rel="stylesheet" href="{{asset('style/dashboard.css')}}">
<link rel="stylesheet" href="{{asset('style/table.css')}}">
{% endblock %}
{% block title %}Article{% endblock %}

{% block body %}
<div class="content">
    {% include "dashboard/nav.html.twig" %}
    <div class="container">
        <table class="table greyGridTable">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ article.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ article.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ article.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ article.price }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ article.image }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ article.slug }}</td>
                </tr>
                <tr>
                    <td  colspan="2">        
                        <a class="edit" href="{{ path('app_article_edit', {'id': article.id}) }}">Modifier</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">{{ include('article/_delete_form.html.twig') }}</td>
                </tr>
            </tbody>
        </table>
        <a class="back" href="{{ path('app_article_index') }}">Retour Ã  la liste</a>
    </div>
</div>
    

    
{% endblock %}
