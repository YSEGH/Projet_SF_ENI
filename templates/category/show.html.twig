{% extends 'base.html.twig' %}
{% block css %}
<link rel="stylesheet" href="{{asset('style/dashboard.css')}}">
<link rel="stylesheet" href="{{asset('style/table.css')}}">
{% endblock %}
{% block title %}{{ category.name }}{% endblock %}

{% block body %}
<div class="content">
    {% include "dashboard/nav.html.twig" %}

    <div class="container">
        <table class="table greyGridTable">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <td colspan="2">        
                        <a class="edit" href="{{ path('app_category_edit', {'id': category.id}) }}">Modifier</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">{{ include('category/_delete_form.html.twig') }}</td>
                </tr>
            </tbody>
        </table>

        <a class="back"  href="{{ path('app_category_index') }}">Retour Ã  la liste</a>


        
    </div>
</div>
{% endblock %}
