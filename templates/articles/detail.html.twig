{% extends 'base.html.twig' %}
{% block css %}
<link rel="stylesheet" href="{{ asset('style/article_details.css') }}" />
{% endblock %} 


{% block body %}
<div class="item details">
    <div class="item_header">
        <img src="{{ asset(article.image) }}" alt="{{ article.slug }} image" />
    </div>
    <div class="text-container">
        <ul>
            <li class="name">{{ article.name }}</li>
            <li class="category">
                <a href="{{path('app_list', { categorie: article.category})}}">{{ article.category }}</a>
            </li>
            <li class="description">{{ article.description }}</li>
            <li class="price">{{ article.price }}â‚¬</li>
        </ul>
        {{ form_start(form) }}
        <div>
            {{ form_label(form.quantity) }}
            {{ form_widget(form.quantity) }}
            <div>
                {{ form_errors(form.quantity) }}
            </div>
        </div>
        {{ form_widget(form.add) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
